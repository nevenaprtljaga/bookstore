@using bookstore.Models;
@model RentCartViewModel

@{
    ViewData["Title"] = "Rent cart summary";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>You rent cart summary</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Selected amount</th>
                    <th>Book</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RentCart.RentCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Book.Title</td>
                        <td class="align-middle">@item.Book.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount * item.Book.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromRentCart"
                           asp-route-id="@item.Book.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            |
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToRentCart"
                           asp-route-id="@item.Book.Id">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.RentCartTotal.ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-outline-primary" asp-action="CompleteRentOrder">
                    Complete order
                </a>
                <span style="padding:5px"></span>
                <a class="btn btn-outline-success" asp-controller="Books" asp-action="Index">
                    Add more items
                </a>
            </div>
        </div>
    </div>
</div>



