@model IEnumerable<OrdersViewModel>

@{
    ViewData["Title"] = "List of Orders";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Order.Date)</th>
                    <th>@Html.DisplayNameFor(model => model.Order.ApplicationUserId)</th>
                    <th>Actions</th>
                <tr />
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Order.Date)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Order.ApplicationUserId)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Order.Id"><i class="bi bi-eye"></i>Details </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
