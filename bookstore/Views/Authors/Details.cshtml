@using bookstore.Entities;
@model AuthorsViewModel

@{
    ViewData["Title"] = "Details for author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Author.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-1">
                <div class="form-group">
                    <label asp-for="Author.FullName" class="control-label"></label>
                    <input asp-for="Author.FullName" class="form-control" readonly />
                    <span asp-validation-for="Author.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author.DateOfBirth" class="control-label"></label>
                    <input asp-for="Author.DateOfBirth" class="form-control" r eadonly/>
                    <span asp-validation-for="Author.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-end" asp-action="Update" asp-route-id="@Model.Author.Id">Update</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>

</div>