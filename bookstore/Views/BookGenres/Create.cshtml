@using bookstore.Entities;
@model BookGenresViewModel

@{
    ViewData["Title"] = "Add a new book genre";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new book genre</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-1">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BookGenre.Name" class="control-label"></label>
                        <input asp-for="BookGenre.Name" class="form-control" />
                        <span asp-validation-for="BookGenre.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BookGenre.Description" class="control-label"></label>
                        <input asp-for="BookGenre.Description" class="form-control" />
                        <span asp-validation-for="BookGenre.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>