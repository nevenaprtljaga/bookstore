@model IEnumerable<BookGenresViewModel>

@{
    ViewData["Title"] = "List of Book Genres";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.BookGenre.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.BookGenre.Description)</th>
                    <th>Actions</th>
                <tr />
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BookGenre.Name)
                        </td>
                        <td class="align-middle" width="500px" text-align= "justify">
                            @Html.DisplayFor(modelItem => item.BookGenre.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.BookGenre.Id"><i class="bi bi-pencil-square"></i>Update </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.BookGenre.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BookGenre.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("_CreateItem", "bookGenres")